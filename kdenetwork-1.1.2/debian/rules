#!/usr/bin/make -f
# Made with the aid of debmake, by Christoph Lameter,
# based on the sample debian/rules file for GNU hello by Ian Jackson.

BUILDDIR = ./build

build: $(BUILDDIR)/build-stamp

$(BUILDDIR)/build-stamp:
	dh_testdir
	if test ! -f configure; then \
	  $(MAKE) -f admin/Makefile.common ;\
	fi 
	test -d $(BUILDDIR) || mkdir $(BUILDDIR) ;\
	cp -R po $(BUILDDIR) ;\
	cd $(BUILDDIR) ;\
	CFLAGS="-O2 -g -Wall" \
	 CXXFLAGS="-O2 -g -Wall" \
	../configure --with-install-root=`pwd`/../debian/tmp \
	--disable-rpath \
	--includedir="\$$(prefix)/include/kde" \
	--libdir="\$$(prefix)/lib" --prefix=/usr --with-qt-dir=/usr/lib/qt1g

	make -C $(BUILDDIR)

	touch $(BUILDDIR)/build-stamp

clean: debian-clean
	-rm -rf $(BUILDDIR)
	-rm -f debian/menu
	-rm -f debian/files
	-rm -f debian/substvars
	-rm -f configure
	dh_clean -k

debian-clean:
	dh_testdir
	-rm -f $(BUILDDIR)/build

binary-indep:	build
	dh_testdir
# There are no architecture-independent files to be uploaded
# generated by this package.  If there were any they would be
# made here.

binary-arch: build
	dh_testdir
	dh_testroot
	dh_clean -k
	make -C $(BUILDDIR) prefix=`pwd`/debian/tmp/usr install 
	echo "# KDE Config File"          > debian/tmp/etc/kde/knurc
	echo "[Traceroute]"              >> debian/tmp/etc/kde/knurc
	echo "path=/usr/sbin/traceroute" >> debian/tmp/etc/kde/knurc
	perl -w admin/debianrules
	chmod 755 debian/tmp/usr/share/apps/ksirc/convert_commands.pl
	chmod 755 debian/tmp/usr/share/apps/ksirc/tester.pl
	dh_movefiles
	dh_undocumented 
	dh_installdocs
	dh_installmenu
	dh_installchangelogs 
	dh_strip
	dh_compress
	dh_fixperms
	dh_suidregister
	dh_makeshlibs
	dh_installdeb
	dh_shlibdeps
	dh_gencontrol
	dh_md5sums
	perl -w admin/debianrules update
	dh_builddeb

# Below here is fairly generic really

binary:		binary-indep binary-arch

.PHONY: binary binary-arch binary-indep clean

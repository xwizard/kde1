		vw.h \
		motor.h

moc_motor.o: moc_motor.cpp \
		motor.h

moc_vw.o: moc_vw.cpp \
		vw.h

moc_motor.cpp: motor.h
	$(MOC) motor.h -o moc_motor.cpp

moc_vw.cpp: vw.h
	$(MOC) vw.h -o moc_vw.cpp


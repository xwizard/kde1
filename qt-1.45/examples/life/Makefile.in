####### System-dependendant options

####### BEGIN
build_error:
	@echo "This section should have been replaced by a config file."
####### END

####### Compiler, tools and options

CXX	=	$(SYSCONF_CXX)
CXXFLAGS=	$(SYSCONF_CXXFLAGS_QT) $(SYSCONF_CXXFLAGS)
LFLAGS	=	$(SYSCONF_LFLAGS_QT) $(SYSCONF_LFLAGS_X11) $(SYSCONF_LFLAGS)
LIBS	=	$(SYSCONF_LIBS_QT) $(SYSCONF_LIBS_X11) $(SYSCONF_LIBS)
MOC	=	$(SYSCONF_MOC)

####### Target

TARGET	= life
DESTDIR = ./
VER_MAJ = 1
VER_MIN = 0

####### Files

HEADERS =	life.h \
		lifedlg.h
SOURCES =	life.cpp \
		lifedlg.cpp \
		main.cpp
OBJECTS =	life.o \
		lifedlg.o \
		main.o
SRCMOC	=	moc_life.cpp \
		moc_lifedlg.cpp
OBJMOC	=	moc_life.o \
		moc_lifedlg.o

####### Implicit rules

.SUFFIXES: .cpp .cxx .cc .C .c

.cpp.o:
	$(CXX) -c $(CXXFLAGS) $(INCPATH) -o $@ $<

.cxx.o:
	$(CXX) -c $(CXXFLAGS) $(INCPATH) -o $@ $<

.cc.o:
	$(CXX) -c $(CXXFLAGS) $(INCPATH) -o $@ $<

.C.o:
	$(CXX) -c $(CXXFLAGS) $(INCPATH) -o $@ $<

.c.o:
	$(CXX) -c $(CXXFLAGS) $(INCPATH) -o $@ $<

####### Build rules

all: $(DESTDIR)$(TARGET)

$(DESTDIR)$(TARGET): $(OBJECTS) $(OBJMOC) 
	$(SYSCONF_LINK) $(LFLAGS) -o $(TARGET) $(OBJECTS) $(OBJMOC) $(LIBS)

moc: $(SRCMOC)

tmake:
	tmake life.pro

clean:
	-rm -f $(OBJECTS) $(OBJMOC) $(SRCMOC)
	-rm -f *~ core

####### Compile

life.o: life.cpp \
		life.h

lifedlg.o: lifedlg.cpp \
		lifedlg.h \
		life.h \
		patterns.cpp

main.o: main.cpp \
		lifedlg.h \
		life.h

moc_life.o: moc_life.cpp \
		life.h

moc_lifedlg.o: moc_lifedlg.cpp \
		lifedlg.h \
		life.h

moc_life.cpp: life.h
	$(MOC) life.h -o moc_life.cpp

moc_lifedlg.cpp: lifedlg.h
	$(MOC) lifedlg.h -o moc_lifedlg.cpp

